from random import randint

# Определяем функцию
def track():
    # Определяем случайные числа для выражений
 x =  randint(4, 6)
 y =  randint(0, 10)
    # Переменная для ответа на вопрос
 answr =  input('{}  x {} ='.format(x, y))

    # Если ответ правильный
    if answr == str(x * y):
        print('Правильно')
 track()
    # Если неправильный
    else:
        print('Неправильно, попробуйте еще раз')
        # Требуем правильный ответ до его получения
        while str(x*y) != answr:
 answr = input('{} x {} = '.format(x, y))
            if answr != str(x*y):
                print('Неправильно, попробуйте еще раз')
                continue
            else:
                print('Правильно')
                track()
        track()
# Вызываем написанную нами функцию 
track()
